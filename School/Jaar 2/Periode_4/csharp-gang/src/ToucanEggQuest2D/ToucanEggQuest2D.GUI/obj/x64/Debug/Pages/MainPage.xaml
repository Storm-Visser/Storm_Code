<Page
    x:Class="ToucanEggQuest2D.GUI.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Source="/Assets/MainmenuBackground.png" Stretch="UniformToFill"/>
        <Button x:ConnectionId='2' x:Name="ButtonPlay"                          Margin="0,200,0,0" VerticalAlignment="Top" Height="200" Width="500" HorizontalAlignment="Center" Background="Transparent">
            <Grid>
                <Image Source="/Assets/MainmenuButton.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                <TextBlock x:ConnectionId='9' x:Name="TextPlay" Text="Play" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Viner Hand ITC" FontSize="80"/>
            </Grid>
        </Button>
        <Button x:ConnectionId='3' x:Name="ButtonCreate"                            Margin="0,400,0,0" VerticalAlignment="Top" Height="200" Width="500" HorizontalAlignment="Center" Background="Transparent">
            <Grid>
                <Image Source="/Assets/MainmenuButton.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                <TextBlock x:ConnectionId='8' x:Name="TextCreate" Text="Create" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Viner Hand ITC" FontSize="80"/>
            </Grid>
        </Button>
        <Button x:ConnectionId='4' x:Name="ButtonSettings"                              Margin="0,600,0,0" VerticalAlignment="Top" Height="200" Width="500" HorizontalAlignment="Center" Background="Transparent">
            <Grid>
                <Image Source="/Assets/MainmenuButton.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                <TextBlock x:ConnectionId='7' x:Name="TextSettings" Text="Settings" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Viner Hand ITC" FontSize="80"/>
            </Grid>
        </Button>
        <Button x:ConnectionId='5' x:Name="ButtonQuit"                          Margin="0,800,0,0" VerticalAlignment="Top" Height="200" Width="500" HorizontalAlignment="Center" Background="Transparent">
            <Grid>
                <Image Source="/Assets/MainmenuButton.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
                <TextBlock x:ConnectionId='6' x:Name="TextQuit" Text="Quit Game" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Viner Hand ITC" FontSize="80"/>
            </Grid>
        </Button>
    </Grid>
</Page>

